<div class="d-flex flex-column align-items-center">
  <h1>My lists</h1>
  <%= link_to "Create a new list", new_list_path, class: "btn btn-success" %>
</div>


<div class="lists-container row d-flex justify-content-center">
  <% @lists.each do |list| %>
    <%= link_to list_path(list), class: "card row col-3 d-flex flex-row mt-3 me-2 p-0 ms-2" do %>
      <% if list.photo.attached? %>
        <div class="list-card-category col-6" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 500, crop: :fill %>')"></div>
      <% end %>
      <div class="col-6 d-flex align-items-center">
        <p class="text-decoration-none m-0"><%= list.name %></p>
      </div>
    <% end %>
  <% end %>
</div>
