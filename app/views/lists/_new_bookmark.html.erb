<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.association :movie %>
  <%= f.input :comment %>
  <div class="d-flex justify-content-center">
    <%= f.submit "Add movie to list", class: "btn btn-success me-2" %>
    <button class="close-bookmark-button btn btn-danger">Close</button>
  </div>
<% end %>
